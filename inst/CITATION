citHeader("To cite bahz in publications use:")

citEntry(entry = "Article",
  title        = "{bahz}citation(: Bayesian Analysis of Hybrid Zones",
  author       = personList(as.person("Timothy J Thurman")),
  journal      = "R Package",
  year         = "2019",
  url          = "https://github.com/tjthurman/BAHZ",

  textVersion  =
  paste("Timothy J Thurman (2019).",
        "bahz: Bayesian Analysis of Hybrid Zones.",
        "R package.",
        "URL https://github.com/tjthurman/BAHZ")
)
